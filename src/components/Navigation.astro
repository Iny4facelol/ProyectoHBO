---
import Hbomax from "./icons/Hbomax.astro"
---
<nav class="px-4 py-2 flex gap-32 justify-between z-50 sticky top-0 nav1" >
    <div class="flex gap-5">
      <div class="flex justify-center items-center">
        <img src="/hbo-max-h-w-l.svg" class="w-40 h-7" />
      </div>
      <div class="flex justify-center items-center">
      <ul class="text-white text-xs flex justify-center items-center gap-8 p-2 cursor-pointer">
        <li>IMPRESCINDIBLES</li>
        <li>PELÍCULAS</li>
        <li>SERIES</li>
        <li>FAMILIA</li>
        <li>PREGUNTAS FRECUENTES</li>
        <li>PRECIOS</li>
      </ul>
      </div>
    </div>
    <div class="flex gap-6 justify-center items-center">
      <div><button class="text-white text-xs">INICIA SESIÓN</button></div>
      <div><button class="text-white text-xs bg-btnBackground rounded-full w-44 h-9 hover:bg-white hover:text-black transition-all duration-500">SUSCRÍBETE YA</button></div>
    </div>
  </nav>


  <nav class=" bg-white nav2 sticky top-0 z-30">
    
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between gap-4 mx-auto p-4 bg-black bg-opacity-80 navBox">
        
      <div class=" flex flex-wrap justify-between items-center   bg-opacity-80">
        <button data-collapse-toggle="navbar-hamburger" type="button" class="inline-flex items-center justify-center p-2 w-10 h-10 text-sm text-gray-500 rounded-lg   dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-hamburger" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
            </svg>
          </button>
          <img src="/hbo-max-h-w-l.svg" class="w-48 h-8 hbomaxLogo" />
        </div>  

      
      <div class="flex gap-6 justify-center items-center">
        <div><button class="text-white text-xs login">INICIA SESIÓN</button></div>
        <div><button class="text-white text-xs suscribe bg-btnBackground rounded-full w-44 h-9 hover:bg-white hover:text-black transition-all duration-500">SUSCRÍBETE YA</button></div>
      </div>



      <div class="hidden w-full" id="navbar-hamburger">
        <ul class="flex flex-col font-medium mt-4 rounded-lg bg-black  dark:bg-gray-800 dark:border-gray-700">
          <li>
            <a href="#" class="block py-2 px-3 text-white bg-acorddionColor rounded dark:bg-blue-600" aria-current="page">IMPRESCINDIBLES</a>
          </li>
          <li>
            <a href="#" class="block py-2 px-3 text-white rounded hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">PELÍCULAS</a>
          </li>
          <li>
            <a href="#" class="block py-2 px-3 text-white rounded hover:bg-gray-100 dark:text-gray-400 md:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white">SERIES</a>
          </li>
          <li>
            <a href="#" class="block py-2 px-3 text-white rounded hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">FAMILIA</a>
          </li>
          <li>
            <a href="#" class="block py-2 px-3 text-white rounded hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">PREGUNTAS FRECUENTES</a>
          </li>
          <li>
            <a href="#" class="block py-2 px-3 text-white rounded hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">PRECIOS</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  


  <style>
        nav {
        background-color: rgba(0, 0, 0, 0.726);
        width: 100%;
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        letter-spacing: 2px;
        backdrop-filter: blur(10px);
        }
        button {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        letter-spacing: 2px;
        }
        .nav2{
            display: none;
        }
        @media (max-width: 1078px) {
            .nav1{
                display: none;
            }
            .nav2{
                display: inline;
            }

        }
        @media (max-width:590px) {
          .login {
            display: none;
          }
          .hbomaxLogo{
            width: 100px;

          }
          .suscribe{
            height: 30px;
          }
          .navBox{
            padding: 4px;
            gap: 0px;
          }
        }
        
  </style>